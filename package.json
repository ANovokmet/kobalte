{
  "name": "kobalte-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "A UI toolkit for building SolidJS applications.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kobaltedev/kobalte.git"
  },
  "license": "MIT",
  "author": "Fabien Marie-Louise <fabienml.dev@gmail.com>",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:libs": "pnpm -F \\!docs -F \\!playground build && pnpm i",
    "changeset": "changeset",
    "ci:release": "pnpm build && changeset publish",
    "ci:version": "changeset version && pnpm i --no-frozen-lockfile && git add .",
    "clean": "turbo run clean && rm -rf node_modules",
    "commit": "git-cz",
    "dev:core": "pnpm -F @kobalte/core dev",
    "dev:docs": "pnpm -F @kobalte/docs dev",
    "format": "prettier . --write --ignore-path .gitignore && git update-index --again",
    "prepare": "husky install",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --write"
    ],
    "package.json": "npx sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@babel/core": "7.23.6",
    "@babel/preset-env": "7.23.6",
    "@changesets/cli": "2.27.1",
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@commitlint/cz-commitlint": "18.4.3",
    "@jest/types": "28.1.3",
    "@solidjs/testing-library": "0.8.4",
    "@testing-library/dom": "9.3.3",
    "@testing-library/jest-dom": "6.1.5",
    "@testing-library/user-event": "14.5.1",
    "@types/jest": "28.1.8",
    "@types/node": "20.10.4",
    "@types/testing-library__jest-dom": "6.0.0",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "babel-preset-solid": "1.8.6",
    "commitizen": "4.3.0",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-solid": "0.13.0",
    "husky": "8.0.3",
    "inquirer": "8.2.5",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "lint-staged": "15.2.0",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.5.9",
    "rollup": "4.9.0",
    "rollup-preset-solid": "2.0.1",
    "solid-js": "1.8.7",
    "sort-package-json": "2.6.0",
    "ts-jest": "28.0.8",
    "tsup": "8.0.1",
    "turbo": "1.11.2",
    "typescript": "5.3.3",
    "vite": "5.0.8",
    "vite-plugin-solid": "2.8.0"
  },
  "packageManager": "pnpm@8.12.1"
}
